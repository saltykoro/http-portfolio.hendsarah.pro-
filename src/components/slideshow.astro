<style>
  .slideshow-container {
    max-width: 1000px;
    position: relative;
    margin: auto;
  }

  .mySlides {
    display: none;
  }

  img {
    width: 100%;
  }
</style>

<div class="slideshow-container">
  <div class="mySlides fade">
    <img src="/assets/images/posts/slide1.jpg" />
  </div>
  <div class="mySlides fade">
    <img src="/assets/images/posts/slide2.jpg" />
  </div>
